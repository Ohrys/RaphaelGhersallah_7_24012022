{
    "dependencies": {
        "concurrently": "^7.0.0"
    },
    "scripts": {
        "backend":"cd backend && npm start",
        "frontend":"cd frontend && npm run serve",
        "start":"concurrently \"npm run backend\" \"npm run frontend\"",
        "initback":"cd backend && npm i",
        "initfront":"cd frontend && npm i",
        "init":"npm i && concurrently \"npm run initback\" \"npm run initfront\""
    }
}
